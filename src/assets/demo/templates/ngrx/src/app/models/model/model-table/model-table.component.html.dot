<div class="{{=it.m.names.hyphen}}-list-container">

    <div class="p-2 p-md-3 p-lg-4" [ngClass]="{'d-none': !total}">
        <mat-card class="table-container">
            <div *ngIf="refreshing" class="loading-shade">
                <mat-spinner></mat-spinner>
            </div>
            <mat-table #table
                       [dataSource]="dataSource"
                       matSort
                       matSortDisableClear
                       matSortActive="{{=it.o}} {{=it.m.names.lowerCamel}}SearchParams.props._sort {{=it.c}}"
                       matSortDirection="{{=it.o}} {{=it.m.names.lowerCamel}}SearchParams.props._order {{=it.c}}">
{{~it.m.f.l : f}}{{? !f.isPrivate }}
                <!-- {{=f.names.wordsUpper}} Column -->
                <ng-container matColumnDef="{{=f.names.underscore}}">
                    <mat-header-cell *matHeaderCellDef{{?f.sortable}} mat-sort-header{{?}}>
                        {{=it.o}} '{{=it.m.names.underscore}}_list_title_{{=f.names.underscore}}' | translate {{=it.c}}
                    </mat-header-cell>
                    <mat-cell *matCellDef="let row">{{?f.primary}}
                        <a [routerLink]="['/{{=it.m.names.hyphen}}', row.getId()]">{{?}}
                        {{?f.type==='datetime'}}{{=it.o}} row.props.{{=f.names.underscore}} | date:'medium' {{=it.c}}
                        {{??f.type==='boolean'}}{{=it.o}} (row.props.{{=f.names.underscore}} ? '{{=it.m.names.underscore}}_{{=f.names.underscore}}_true' : '{{=it.m.names.underscore}}_{{=f.names.underscore}}_false') | translate {{=it.c}}
                        {{??}}{{=it.o}} row.props.{{=f.names.underscore}} {{=it.c}}
                        {{?}}{{?f.primary}}</a>{{?}}
                    </mat-cell>
                </ng-container>
{{?}}{{~}}

                <mat-header-row *matHeaderRowDef="columns"></mat-header-row>
                <mat-row *matRowDef="let row; columns: columns;"></mat-row>
            </mat-table>

            <mat-paginator
                    [length]="total"
                    [pageSize]="{{=it.m.names.lowerCamel}}SearchParams.props._limit"
                    [pageIndex]="{{=it.m.names.lowerCamel}}SearchParams.props._page"
                    [pageSizeOptions]="[5, 10, 25, 100]"></mat-paginator>
        </mat-card>
    </div>
    <div *ngIf="!total" class="text-center p-2 p-md-3 p-lg-4">
        <mat-card>
            <h4 class="my-3">{{=it.o}} '{{=it.m.names.underscore}}_list_nothing' | translate {{=it.c}}</h4>
        </mat-card>
    </div>
    <div class="text-center my-4">
        <a [routerLink]="['/{{=it.m.names.hyphen}}/create']" mat-raised-button color="primary">
            {{=it.o}} '{{=it.m.names.underscore}}_action_create' | translate {{=it.c}}
        </a>
    </div>
</div>