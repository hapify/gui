<div class="container">
    <div class="row">
        <div class="offset-md-1 col-md-10 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6 mt-3 mb-3 mt-lg-5 mb-lg-5">

            <mat-card>
{{~it.m.f.f(f => !(f.isPrivate || f.primary)) : f}}
                <!-- {{=f.names.wordsUpper}} -->
                <div class="mb-4">
                    <h5>{{=it.o}} '{{=it.m.names.underscore}}_title_{{=f.names.underscore}}' | translate {{=it.c}}</h5>
                    {{?f.type==='datetime'}}<div>{{=it.o}} {{=it.m.names.lowerCamel}}.props.{{=f.names.underscore}} | date:'medium' {{=it.c}}</div>
                    {{??f.type==='boolean'}}<div>{{=it.o}} ({{=it.m.names.lowerCamel}}.props.{{=f.names.underscore}} ? '{{=it.m.names.underscore}}_{{=f.names.underscore}}_true' : '{{=it.m.names.underscore}}_{{=f.names.underscore}}_false') | translate {{=it.c}}</div>
                    {{??}}<div>{{=it.o}} {{=it.m.names.lowerCamel}}.props.{{=f.names.underscore}} {{=it.c}}</div>{{?}}
                </div>
                <!-- /{{=f.names.wordsUpper}} -->
{{~}}
                <mat-divider class="mb-4"></mat-divider>
                <div class="row">
                    <div class="col-4">
                        <a [routerLink]="['/{{=it.m.names.hyphen}}/edit', {{=it.m.names.lowerCamel}}.getId()]" mat-raised-button color="primary">
                            {{=it.o}} '{{=it.m.names.underscore}}_action_edit' | translate {{=it.c}}
                        </a>
                    </div>
                    <div class="col-8">
                        <div class="float-right">
                            <mat-slide-toggle color="warn"
                                              [checked]="deletionUnlocked"
                                              (change)="onDeletionUnlock($event)"
                            ></mat-slide-toggle>
                            <button class="ml-2"
                                    [disabled]="!deletionUnlocked"
                                    (click)="onDeleteClick()"
                                    mat-raised-button
                                    color="warn">
                                {{=it.o}} '{{=it.m.names.underscore}}_action_delete' | translate {{=it.c}}
                            </button>
                        </div>
                    </div>
                </div>

            </mat-card>

        </div>
    </div>
</div>
